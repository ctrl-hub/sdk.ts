{
  "compilerOptions": {
    "target": "ESNext",                  // Your target JS version
    "module": "ESNext",                  // Use ES modules
    "outDir": "dist",                    // Output directory for compiled files
    "rootDir": "src",                    // Root directory for the source files
    "declaration": true,                 // Generate .d.ts files
    "declarationMap": true,              // Optionally generate source maps for .d.ts files
    "emitDeclarationOnly": true,        // Emit both .js and .d.ts files
    "strict": true,                      // Enable strict type-checking
    "esModuleInterop": true,             // Allow CommonJS interop
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],               // Include all .ts files in src
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist
}