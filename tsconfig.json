{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./services"
  },
  "include": ["src/**/*"],      // Ensure TypeScript checks all source files
  "exclude": [
    "node_modules"
  ]
}