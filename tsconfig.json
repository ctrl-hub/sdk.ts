{
  "compilerOptions": {
    "target": "ESNext",
    "module": "System",                  // Required to use `outFile`
    "outFile": "dist/types.d.ts",        // Single bundled .d.ts file
    "declaration": true,                 // Generate declaration files
    "declarationMap": false,             // Disable maps for simpler setup
    "emitDeclarationOnly": true,         // Emit only the .d.ts file
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],               // Include all .ts files
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist
}